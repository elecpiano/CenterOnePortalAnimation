<Window x:Class="BubbleGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="200" Width="500" WindowStartupLocation="CenterScreen" >
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBox x:Name="bubbleCountTextbox" Text="100" Width="120" Margin="10"/>
            <Button Content="Generate Bubbles" Click="Generate_Click" Width="120" Height="32" Margin="2"/>
        </StackPanel>
        <ProgressBar x:Name="progressbar" Height="40" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="progressTextblock" Text="0" Foreground="Black" FontSize="32" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
